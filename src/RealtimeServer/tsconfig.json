{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "dom"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./typings/*"]
    }
  }
}
