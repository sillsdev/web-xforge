@model RazorPageSettings
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var localeHelps = LocOptions.Value.SupportedUICultures.Where(c =>
    SharedResource.Cultures[c.IetfLanguageTag].Tags.Where(t =>
    t == @requestCulture.RequestCulture.UICulture.Name).Count() > 0).Select(c =>
    SharedResource.Cultures[c.IetfLanguageTag]).ToArray();
    var helps = "https://help.scriptureforge.org/" + (@localeHelps[0].Helps != null ? @localeHelps[0].Helps : "en");
}

<footer>
    <div class="container">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col flex justify-content-space-between align-items-end">
                <div id="profile">
                    <ul class="app">
                        <li class="copyright">&copy; @DateTime.Now.Year
                            <a target="_blank" href="http://www.sil.org">SIL International</a>
                        </li>
                        <li class="version">@Model.ProductVersion</li>
                    </ul>
                    <ul class="links">
                        <li><a asp-page="Terms">@SharedLocalizer[SharedResource.Keys.Terms]</a></li>
                        <li><a asp-page="Privacy">@SharedLocalizer[SharedResource.Keys.Privacy]</a></li>
                        <li><a asp-page="LearnMore">@SharedLocalizer[SharedResource.Keys.LearnMore]</a></li>
                        <li><a href="@helps" target="_blank">@SharedLocalizer[SharedResource.Keys.Help]</a></li>
                        <li><a href="https://community.scripture.software.sil.org/c/scripture-forge/19"
                                target="_blank">@SharedLocalizer[SharedResource.Keys.CommunitySupport]</a></li>
                    </ul>
                </div>
                <div id="logos">
                    <a id="payap" href="https://inter.payap.ac.th/" target="_blank">
                        <img src="~/images/logo-payap.svg" loading="lazy" alt="Payap University Logo"></a>
                    <a id="sil" href="http://www.sil.org/" target="_blank">
                        <img src="~/images/logo-sil.svg" loading="lazy" alt="SIL International Logo"></a>
                </div>
            </div>
        </div>
    </div>
</footer>
<script src="https://d2wy8f7a9ursnm.cloudfront.net/v6/bugsnag.min.js"></script>
<script>
    window.bugsnagClient = bugsnag(@Html.Raw(@Model.BugsnagConfig));
</script>
<script src="~/lib/material-design-lite/js/material.min.js"></script>
