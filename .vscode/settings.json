    "uninvite",
    "unsynchronized",
    "usfm",
    "webm",
    "xforge",
    "xfvalidators",
    "xlink",
    "zizmor"
  ],
  "dotnet.defaultSolution": "xForge.sln",
  "dotnet.formatting.organizeImportsOnFormat": true,
  "dotnet-test-explorer.testProjectPath": "test/**/*.Tests.csproj",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "editor.rulers": [120],
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 120,
  "eslint.workingDirectories": ["./src/RealtimeServer", "./src/SIL.XForge.Scripture/ClientApp"],
  "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
  "jest.debugCodeLens.showWhenTestStateIn": ["fail"],
  "jest.rootPath": "src/RealtimeServer",
  "liveSassCompile.settings.includeItems": ["/src/SIL.XForge.Scripture/wwwroot/scss/**.scss"],
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "~/../css/"
    }
  ],
  "liveSassCompile.settings.generateMap": false,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "deno.enablePaths": [
    "src/SIL.XForge.Scripture/ClientApp/e2e/",
    "scripts/auth0-manage.ts",
    "scripts/check_external_urls.mts",
    "scripts/monitor_pt_registry.ts",
    "scripts/update_font_list.mts",
    "scripts/update_from_crowdin.mts",
    "scripts/update_language_code_map.mts",
    "scripts/update_writing_system_font_map.mts",
    "scripts/watch-for-rts-spike.mts"
  ],
  "python.formatting.provider": "black",
  "typescript.tsdk": "./src/SIL.XForge.Scripture/ClientApp/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.organizeImports": {
    "caseSensitivity": "caseInsensitive"
  }
}
