@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model IndexModel
@section scripts {
<script src="https://cdn.auth0.com/js/auth0-spa-js/1.12/auth0-spa-js.production.js"></script>
<script type="text/javascript">
    var webAuth = new Auth0Client({
        client_id: '@ViewData["ClientId"]',
        domain: '@ViewData["Domain"]',
        redirect_uri: window.location.origin + '/callback',
        scope: 'openid profile email @ViewData["Scope"]',
        audience: '@ViewData["Audience"]',
        cacheLocation: 'localstorage',
        useRefreshTokens: true
    });
    webAuth.getTokenSilently().then(() => {
        window.location.href = "/projects";
    }).catch(() => { });
</script>
}

<section id="hero">
    <div class="container">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col align-center">
                <img src="~/images/multi-devices.svg" loading="lazy" alt="Works on multiple devices" />
                <h1 class="align-center">@Localizer["Description"]</h1>
            </div>
        </div>
    </div>
</section>
<section id="engage">
    <div class="container">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col flex direction-column justify-content-center">
                <div class="title align-center">@Localizer["EngageTitle"]</div>
                <div class="engage-features">
                    <div class="engage-feature">
                        <img src="~/images/logo-paratext.svg" loading="lazy" alt="Paratext" />
                        <span>@Localizer["EngageCollaborate"]</span>
                    </div>
                    <div class="engage-feature">
                        <img src="~/images/community-checking.svg" loading="lazy" alt="Community Checking" />
                        <span>@Localizer["EngageChecking"]</span>
                    </div>
                    <div class="engage-feature">
                        <img src="~/images/translate2.svg" loading="lazy" alt="Translate" />
                        <span>@Localizer["EngageSuggestions"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="about" class="panel">
    <div class="container">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet">
                <div class="section-title">
                    <h2>@Localizer["AboutHeader"]</h2>
                    <div class="title">@Localizer["AboutTitle"]</div>
                </div>
            </div>
            <div class="mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet intro">
                <p>@Localizer["AboutEngaging"]</p>
                <p>@Localizer["AboutCheckingTool"]</p>
            </div>
        </div>
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                <div class="about-features">
                    <div class="about-feature">
                        <a href="https://paratext.org/" rel="noopener noreferrer" target="_blank">
                            <img src="~/images/logo-paratext.svg" loading="lazy" alt="Paratext" />
                        </a>
                        <span>@Localizer["AboutParatext"]</span>
                        <p>@(Html.Raw(Model.Localizer["AboutParatextDescription", "<span class=\"highlight\">",
                            "</span>",
                            "<a href=\"https://paratext.org/\" rel=\"noopener noreferrer\" target=\"_blank\">", "</a>",
                            "<a href=\"https://paratext.org/features/translation-notes-and-comments/\" " +
                            "rel=\"noopener noreferrer\" target=\"_blank\">"
                            ]))</p>
                    </div>
                    <div class="about-feature">
                        <i class="material-icons shuffle-icon">shuffle</i>
                        <span>@Localizer["AboutFlexible"]</span>
                        <p>@(Html.Raw(Model.Localizer["AboutFlexibleDescription", "<span class=\"highlight\">",
                            "</span>"]))</p>
                    </div>
                    <div class="about-feature">
                        <i class="material-icons group-icon">group</i>
                        <span>@Localizer["AboutUserEngagement"]</span>
                        <p>@(Html.Raw(Model.Localizer["AboutUserEngagementDescription", "<span class=\"highlight\">",
                            "</span>"]))</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="quote">
    <div class="quote-container">
        <img src="/images/quoter.jpg" loading="lazy" alt="Quoter" />
        <div class="quote-text">
            <i class="material-icons">format_quote</i>
            <p>
                @Localizer["QuoteQuotation1"]<br />
                <br />
                @Localizer["QuoteQuotation2"]<br />
                <br />
                @Localizer["QuoteQuotation3"]<br />
                <br />
                <span class="quoter-name">@Localizer["QuoteQuoterName"]</span>
                <span class="quoter-role">@Localizer["QuoteQuoterRole"]</span>
            </p>
        </div>
    </div>
</section>
<section class="statement">
    <div class="container">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                <div class="statement-text">
                    @Localizer["Statement"]
                </div>
                <div class="statement-buttons flex justify-content-center">
                    <a asp-page="LearnMore"
                        class="mdl-button mdl-button--raised mdl-button--colored button-lg">@SharedLocalizer[SharedResource.Keys.LearnMore]</a>
                    <a class="mdl-button mdl-button--raised mdl-button--accent button-lg"
                        href="/login?sign-up=true">@SharedLocalizer[SharedResource.Keys.SignUp]</a>
                </div>
            </div>
        </div>
    </div>
</section>
