{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full App (SF)",
      "configurations": [".NET Core (SF)", "Chrome (SF)"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "ShareDB",
      "port": 9229
    },
    {
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm start (SF)",
      "name": "Chrome (SF)",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceRoot}/src/SIL.XForge.Scripture/ClientApp",
      "linux": {
        "runtimeExecutable": "/usr/bin/chromium-browser"
      }
    },
    {
      "name": ".NET Core - npm start (SF)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceRoot}/src/SIL.XForge.Scripture/bin/Debug/netcoreapp2.1/SIL.XForge.Scripture.dll",
      "args": ["--start-ng-serve=yes"],
      "cwd": "${workspaceRoot}/src/SIL.XForge.Scripture/",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": ".NET Core (SF)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceRoot}/src/SIL.XForge.Scripture/bin/Debug/netcoreapp2.1/SIL.XForge.Scripture.dll",
      "args": ["--start-ng-serve=listen"],
      "cwd": "${workspaceRoot}/src/SIL.XForge.Scripture/",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
